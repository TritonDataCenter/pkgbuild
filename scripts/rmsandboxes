#!/bin/bash

set -eu

case "`uname -s`" in
Darwin)
	rmsandbox=$(dirname $0)/rmsandbox-macos
	;;
Linux)
	rmsandbox=$(dirname $0)/rmsandbox-linux
	;;
NetBSD)
	rmsandbox=$(dirname $0)/rmsandbox-netbsd
	;;
SunOS)
	rmsandbox=$(dirname $0)/rmsandbox
	;;
*)
	echo "Unsupported OS" >&2
	exit 1
esac

for chroot; do
	${rmsandbox} ${chroot}
done
